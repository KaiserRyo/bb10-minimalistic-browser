<?xml version='1.0' encoding='utf-8'?>
<widget id="com.jonathanreisdorf.bb10_beol_minimal_browser" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BEOL Browser</name>
    <description>
        MVP browser to bring crosswalk browsing to BB10
    </description>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="18" />
        <preference name="android-targetSdkVersion" value="18" />
        <preference name="android-maxSdkVersion" value="18" />
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="^2.4.0">
        <variable name="XWALK_VERSION" value="23+" />
        <variable name="XWALK_LITEVERSION" value="xwalk_core_library_canary:17+" />
        <variable name="XWALK_COMMANDLINE" value="--disable-pull-to-refresh-effect" />
        <variable name="XWALK_MODE" value="embedded" />
        <variable name="XWALK_MULTIPLEAPK" value="true" />
    </plugin>
    <plugin name="cordova-android-support-gradle-release" spec="^1.4.2">
        <variable name="ANDROID_SUPPORT_VERSION" value="18.+" />
    </plugin>
    <plugin name="com.jonathanreisdorf.cordova.plugin.inappbrowserxwalk" spec="git+https://github.com/jonathan-reisdorf/cordova-plugin-inappbrowserxwalk.git" />
    <engine name="android" spec="^7.0.0" />
</widget>
